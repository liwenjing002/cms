<div class="twidth">

  <div id="navsub">
    <div class="l"></div>
    <div class="r"></div>
    <div class="m">
        <%= forum_tab @forum %>
    </div>
  </div>

  <table id="middle" cellpadding="0" cellspacing="0" width="100%">
    <tbody><tr align="left" valign="top">
        <td>
          <div class="mframe mR">
            <div class="tl"></div>
            <div class="tr"></div>
            <div class="tm">

              <span class="tt"><%=  @forum.name%></span>
            </div>
            <div class="wrapper">
              <div class="ml"></div>
              <div class="mr"></div>
              <div class="mm">
                <%@articles.each do |article|%>
                  <div class="summary">
                    <div class="hr"></div>
                    <div class="diggC"><ul class="digg"><li class="digg1"><%=article.read_num%></li><li class="digg2"><a href="#" >点击数</a></li></ul></div>
                    <div class="cont">
                      <div class="title"><%= link_to strip_html(article.title,64),"/homes/articles/#{article.id}" ,:target=>"_blank"%></div>
                      <div class="sum"></div>
                      <div class="foot">
                        <div style="float:right">
                          <%= link_to "查看全文","/homes/articles/#{article.id}" ,:target=>"_blank"%>
                        </div>日期：<span><%=article.updated_at.strftime("%Y-%m-%d")%></span>
                          作者：<%=article.author%><span></span>
                      </div>
                    </div>
                  </div>
                <%end%>
                <div class="pager">
                  <%= will_paginate @articles,:previous_label => '上一页', :next_label => '下一页', :renderer => 'PaginationDetailLinkRenderer'  %>
                </div>
              </div>
            </div>
            <div class="bl"></div>
            <div class="br"></div>
            <div class="bm"></div>
          </div>
        </td>
        <td width="250">
          <div class="lframe">
            <div class="tl"></div>
            <div class="tr"></div>
            <div class="tm">
              <span class="tt">内容分类</span>
            </div>
            <div class="wrapper">
              <div class="ml"></div>
              <div class="mr"></div>
              <div class="mm">
                <ul class="sList">
                  <%if @forum.children.length >0 %>
                    <%@forum.children.each do |forum|%>
                      <li>
                        <%=link_to(forum.name,"/homes/forums/#{forum.id}")%>
                      </li>
                    <%end%>
                  <%else if @forum.father%>
                      <%@forum.father.children.each do |forum|%>
                        <li>
                          <%=link_to(forum.name,"/homes/forums/#{forum.id}")%>
                        </li>
                      <%end%>
                 <%else%>
                      <%Forum.find(:all,:conditions=>["father_id is null"]).each do |forum|%>
                        <li>
                          <%=link_to(forum.name,"/homes/forums/#{forum.id}")%>
                        </li>
                      <%end%>
                    <%end%>
                  <%end%>
                </ul>
              </div>
            </div>
            <div class="bl"></div>
            <div class="br"></div>
            <div class="bm"></div>
          </div>

          <div class="lframe">
            <div class="tl"></div>
            <div class="tr"></div>
            <div class="tm">
              <span class="tt">点击排行</span>
            </div>
            <div class="wrapper">
              <div class="ml"></div>
              <div class="mr"></div>
              <div class="mm">
                <ul class="dnl">
                  <%Article.find(:all,:order=>"read_num desc",:limit=>20).each do |article|%>
                    <li>
                      <%= link_to raw("<span class='diggN'>#{article.read_num ? article.read_num : 0}</span>#{article.title}"),"/homes/articles/#{article.id}" %>
                    </li>
                  <%end%>
                </ul>
              </div>
            </div>
            <div class="bl"></div>
            <div class="br"></div>
            <div class="bm"></div>
          </div>

          <div class="lframe">
            <div class="tl"></div>
            <div class="tr"></div>
            <div class="tm">
              <span class="tt">头条新闻</span>
            </div>
            <div class="wrapper">
              <div class="ml"></div>
              <div class="mr"></div>
              <div class="mm">
                <ul class="nl">
                  <%Forum.find_by_code('toutiao').articles(:order=>"update_at desc",:limit=>"9").each do |article|%>
                    <li>
                      <%= link_to raw("<span class='diggN'>#{article.read_num ? article.read_num : 0}</span>#{article.title}"),"/homes/articles/#{article.id}"%>
                    </li>
                  <%end%>
                </ul>
              </div>
            </div>
            <div class="bl"></div>
            <div class="br"></div>
            <div class="bm"></div>
          </div>



        </td>
      </tr>
    </tbody></table>

</div>